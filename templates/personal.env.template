# JDMMitAgente - Plantilla Personal
# Configuración optimizada para uso personal

# Información del propietario
OWNER_NAME='{OWNER_NAME}'
ASSISTANT_NAME='{ASSISTANT_NAME}'

# Modelo de IA
MODEL='llama3.2'

# Base de Datos MySQL
DB_TYPE='mysql'
DB_HOST='mysql'
DB_PORT='3306'
DB_USER='jdmmit_user'
DB_PASSWORD='{DB_PASSWORD}'
DB_NAME='jdmmitagente_db'

# Configuración de Email Personal
EMAIL_SMTP='smtp.gmail.com'
EMAIL_PORT='587'
EMAIL_USER='{EMAIL_USER}'
EMAIL_PASS='{EMAIL_PASS}'

# WhatsApp Personal (opcional)
WHATSAPP_NUMBER='{WHATSAPP_NUMBER}'

# Configuraciones adicionales
GOOGLE_SPEECH_LANGUAGE='es-ES'
LOG_FILE='jdmmitagente.log'
OLLAMA_HOST='http://ollama:11434'

# Configuraciones específicas para uso personal
NOTIFICATION_ENABLED='true'
VOICE_ENABLED='true'
AUTO_BACKUP='true'
PRIVACY_MODE='high'

# Metadata
CONFIG_VERSION='3.0.0'
CONFIG_TYPE='personal'
CONFIG_DATE='{CONFIG_DATE}'
